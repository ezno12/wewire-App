{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "rootDir": ".",
        "outDir": "build",
        "removeComments": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*", "__tests__/**/*", "jest.config.js"],
    "extends": "./tsconfig.paths.json",
    "typeRoots": [
        "./node_module/@types",
        "./src/types"
    ],
}
